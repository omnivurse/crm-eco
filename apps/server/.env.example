# Server Configuration
NODE_ENV=development
PORT=3001

# OpenAI Configuration (Required)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Models
EMBED_MODEL=text-embedding-3-large
CHAT_MODEL=gpt-4o-mini

# Supabase Configuration (Required)
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# CORS Configuration
# Comma-separated list of allowed origins (use '*' for development only)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Authentication Bypass (Development Only)
# Set to 'true' to enable demo authentication bypass
# WARNING: NEVER set this to 'true' in production!
ALLOW_DEMO_AUTH=false

# n8n Workflow Automation (Optional)
# Required for automated workflow triggers
N8N_BASE_URL=https://your-n8n-instance.com
N8N_API_KEY=your_n8n_api_key

# Slack Integration (Optional)
# Required for Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# CRM Integration (Optional)
# Required for CRM contact lookups
CRM_BASE_URL=https://your-crm-api.com
CRM_API_KEY=your_crm_api_key

# Logging Configuration
LOG_LEVEL=info
