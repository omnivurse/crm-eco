{
  "name": "crm-eco",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "shared"
  ],
  "scripts": {
    "build": "vite build",
    "build:crm": "npm run build --workspace=@crm-eco/crm",
    "build:admin": "npm run build --workspace=@crm-eco/admin",
    "build:portal": "npm run build --workspace=@crm-eco/portal",
    "build:all": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "db:generate-types": "supabase gen types typescript --project-id ctujznwjyyqnhecixlon > packages/lib/src/types/database.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/supabase-js": "^2.81.1",
    "@tanstack/react-query": "^5.90.10",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.66.0",
    "react-is": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "recharts": "^3.4.1",
    "zod": "^3.25.76",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.1",
    "turbo": "^2.3.3",
    "typescript": "^5.3.3",
    "vite": "^5.4.21"
  },
  "engines": {
    "node": ">=18"
  }
}

